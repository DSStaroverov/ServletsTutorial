<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Servlets tutorial</display-name>

  <filter>
    <filter-name>FilterDemo</filter-name>
    <filter-class>com.tutorial.FilterDemo</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>FilterDemo</filter-name>
    <url-pattern>/FilterDemo</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>SimpleServlet</servlet-name>
    <servlet-class>com.tutorial.SimpleServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StatusCodeDemo</servlet-name>
    <servlet-class>com.tutorial.StatusCodeDemo</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ServletRequestDemo</servlet-name>
    <servlet-class>com.tutorial.ServletRequestDemo</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ServletResponseDemo</servlet-name>
    <servlet-class>com.tutorial.ServletResponseDemo</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>FormGetMethodServlet</servlet-name>
    <servlet-class>com.tutorial.FormGetMethodServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ErrorDemo</servlet-name>
    <servlet-class>com.tutorial.ErrorDemo</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SessionTrackingDemo</servlet-name>
    <servlet-class>com.tutorial.SessionTrackingDemo</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CookieDemo</servlet-name>
    <servlet-class>com.tutorial.CookieDemo</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SimpleServlet</servlet-name>
    <url-pattern>/SimpleServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>StatusCodeDemo</servlet-name>
    <url-pattern>/StatusCodeDemo</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ServletRequestDemo</servlet-name>
    <url-pattern>/ServletRequestDemo</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ServletResponseDemo</servlet-name>
    <url-pattern>/ServletResponseDemo</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>FormGetMethodServlet</servlet-name>
    <url-pattern>/FormGetMethodServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ErrorDemo</servlet-name>
    <url-pattern>/ErrorDemo</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SessionTrackingDemo</servlet-name>
    <url-pattern>/SessionTrackingDemo</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CookieDemo</servlet-name>
    <url-pattern>/CookieDemo</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/ErrorDemo</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Error</exception-type>
    <location>/ErrorDemo</location>
  </error-page>
</web-app>
